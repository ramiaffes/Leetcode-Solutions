class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) {
        int i=0;
        int j=arr.size()-1;
        int n=arr.size();
        while(i<j){
            if(i<(n-1)){
            if(arr[i]>arr[i+1]){
                return i;
            }}
        if(j>0){
            if(arr[j-1]<arr[j]){
                return j;
            }
        }
        j--;
        i++;
        }
    return i;
    }
};
